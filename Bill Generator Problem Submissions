#include <stdio.h>

int main() {
    int pizzas,puffs,cooldrink;
    int total;
    
    
    scanf("%d", &pizzas);
    scanf("%d", &puffs);
    scanf("%d", &cooldrink);
    
    
    total = (pizzas * 100) + (puffs * 20) + (cooldrink * 10);
    
    
    printf("Bill Details\n");
    printf("No of pizzas:%d\n", pizzas);
    printf("No of puffs:%d\n", puffs);
    printf("No of cooldrinks:%d\n", cooldrink);
    printf("Total price=%d\n", total);
    printf("ENJOY THE SHOW!!!\n");
                   
           return 0;
           }



